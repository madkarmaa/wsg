{
    "extends": ["./tsconfig.base.json", "@electron-toolkit/tsconfig/tsconfig.web.json"],
    "include": [
        "src/renderer/**/*.ts",
        "src/renderer/**/*.tsx",
        "src/preload/**/*",
        "src/common/**/*",
        "src/lib/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@common": ["src/common"],
            "@common/*": ["src/common/*"],
            "@lib": ["src/lib"],
            "@lib/*": ["src/lib/*"]
        }
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
}
